{
  "name": "tv-r2d",
  "description": "TV R2D website",
  "author": "Gabriel JUCHAULT <gabriel.juchault@gmail.com>",
  "private": true,
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "serve": "static . -p 8080 -a 0.0.0.0",
    "prod:m500": "rimraf dist && cross-env TVLOCATION=m500 npm run build && npm run serve",
    "prod:asanutt": "rimraf dist && cross-env TVLOCATION=asanutt npm run build && npm run serve",
    "prod:chapiteau": "rimraf dist && cross-env TVLOCATION=chapiteau npm run build && npm run serve"
  },
  "dependencies": {
    "countdown": "^2.6.0",
    "node-static": "^0.7.9",
    "vue": "^2.0.1"
  },
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-loader": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "cross-env": "^3.0.0",
    "css-loader": "^0.25.0",
    "file-loader": "^0.9.0",
    "rimraf": "^2.5.4",
    "vue-loader": "^9.7.0",
    "webpack": "^2.1.0-beta.25",
    "webpack-dev-server": "^2.1.0-beta.0"
  }
}
